// libraries
#include "msp.h"
#include <stdio.h>

// function prototypes
void pin_init(void);
void SysTick_Init(void);
void SysTick_Delay(void);
void changeCount(void);

volatile uint8_t count = 0;

void main(void)
{
    __disable_irq();
    WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;		// stop watchdog timer
    SysTick_Init();
    pin_init();

    __enable_irq();

    while (1) {
        //P4->OUT |= 0xFF;
        changeCount();
        SysTick_Delay();

        count++;

        if (count > 9) {
            count = 0;
        }
    }
}

/*--------------------------------------------------------------
 * Function:        SysTick_Init
 *
 * Description:     Initialize the SysTick delay component.
 *
 * Inputs:          none
 *
 * Outputs:         none
 *-------------------------------------------------------------*/
void SysTick_Init(void) {
    SysTick->CTRL = 0;              // disable SysTick during step
    SysTick->LOAD = 0x00FFFFFF;     // max reload value
    SysTick->VAL = 0;               // any write to current value clears it
    SysTick->CTRL = 0x00000007;     // enable SysTick (3 MHz) -> YES TO INTERRUPTS
}


/*--------------------------------------------------------------
 * Function:        SysTick_Delay
 *
 * Description:     Add a delay to make sure the button is
 *                  being pressed and not just bouncing.
 *
 * Inputs:          (unsigned 16-bit int) delay: integer to set the
 *                  length of the timer delay
 *
 * Outputs:         none
 *-------------------------------------------------------------*/
void SysTick_Delay(void) {
    SysTick->LOAD = 3000000;                        // delay for 1 second per delay value
    SysTick->VAL = 0;                               // any write to current value clears it
    while ((SysTick->CTRL & 0x00010000) == 0);      // wait for flag to be set
}

/*--------------------------------------------------------------
 * Function:        pin_init
 *
 * Description:
 *
 * Inputs:          none
 *
 * Outputs:         none
 *-------------------------------------------------------------*/
void pin_init(void) {
    P4->SEL0 &= ~0x7F;      // set as simple I/O
    P4->SEL1 &= ~0x7F;
    P4->DIR |= 0x7F;        // set to output
    P4->REN |= 0x7F;
    P4->OUT |= 0x7F;       // set to low
}

/*--------------------------------------------------------------
 * Function:        changeCount
 *
 * Description:
 *
 * Inputs:          none
 *
 * Outputs:         none
 *-------------------------------------------------------------*/
void changeCount(void) {
    switch (count) {
    case '0' :
        P4->OUT |= 0x3F;
        P4->OUT &= ~0xC0;
        //count++;
        break;

    case '1' :
        P4->OUT |= 0x06;
        P4->OUT &= ~0xF9;
        //count++;
        break;

    case '2' :
        P4->OUT |= 0x5B;
        P4->OUT &= ~0xA4;
        //count++;
        break;

    case '3' :
        P4->OUT |= 0x4F;
        P4->OUT &= ~0xB0;
        //count++;
        break;

    case '4' :
        P4->OUT |= 0x66;
        P4->OUT &= ~0x99;
        //count++;
        break;

    case '5' :
        P4->OUT |= 0x6D;
        P4->OUT &= ~0x92;
        //count++;
        break;

    case '6' :
        P4->OUT |= 0x7D;
        P4->OUT &= ~0x82;
        //count++;
        break;

    case '7' :
        P4->OUT |= 0x07;
        P4->OUT &= ~0xF8;
        //count++;
        break;

    case '8' :
        P4->OUT |= 0x7F;
        P4->OUT &= ~0x80;
        //count++;
        break;

    case '9' :
        P4->OUT |= 0x6F;
        P4->OUT &= ~0x90;
        //count++;
        break;

    default :
        P4->OUT &= ~0x7F;
    }
}

/*--------------------------------------------------------------
 * Function:        SysTick_Handler
 *
 * Description:
 *
 * Inputs:          none
 *
 * Outputs:         none
 *-------------------------------------------------------------*/
void SysTick_Handler(void) {
    count++;
}
