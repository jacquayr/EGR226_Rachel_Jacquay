// ADD INTERRUPTS FOR E-STOP BUTTONS !!!!!!!!!!!!!

#include "msp.h"
#include "Keypad.h"
#include "LCD.h"
#include "SysTick.h"
#include "Menu.h"
#include <stdlib.h>
#include <stdio.h>

void changeState(void);
void LED_init(void);
void DC_init(void);

void red(void);
void blue(void);
void green(void);

uint8_t count, push, flag;
uint8_t DC = 0;
uint8_t period = 100;

void main(void)
{
    WDT_A->CTL = WDT_A_CTL_PW | WDT_A_CTL_HOLD;		// stop watchdog timer
    SysTick_Init();
    Pin_Init();         // HAS TO GO BEFORE LCD INIT
    LCD_Init();
    Keypad_Init();
    LED_init();
    DC_init();

    commandWrite(0x01);     // clear screen
    delay_milli(500);       // delay 500 ms

    commandWrite(0x0C);     // turn cursor off
    delay_milli(10);        // delay 100 ms

    count = 0;
    push = 0;
    changeState();

    while(1) {
        pressed = Read_Keypad();

        if (pressed) {
            if (num == 1) {
                count = 1;
            }

            else if (num == 2) {                          // if num val is 10
                count = 4;
            }

            else if (num == 3) {                          // if num val is 11
                count = 5;
            }

            changeState();
        }
    }
}

/*--------------------------------------------------------------
 * Function:        changeState
 *
 * Description:     This function changes the case based on the
 *                  count variable value.
 *
 * Inputs:          none
 *
 * Outputs:         none
 *-------------------------------------------------------------*/
void changeState(void) {
    uint8_t state;      // local variable
    state = count;

    if (state == 0) {
        mainMenu();
    }

    else if (state == 1) {
        doorMenu();
        flag = 1;

        while (flag) {
            push = Read_Keypad();

            if (push) {
                if (num == 1) {         // open door
                    state = 2;
                    flag = 0;
                }

                else if (num == 2) {    // close door
                    state = 3;
                    flag = 0;
                }

                else if (num == 12) {   // main menu
                    state = 0;
                    flag = 0;
                }

                push = 0;
            }
        }
    }

    else if (state == 2) {
        P1->OUT &= ~BIT0;   // green LED on, red LED off
        P2->OUT |= BIT1;

        // add in opening the door function !!!!!!!!!

        state = 0;
    }

    else if (state == 3) {
        P2->OUT &= ~BIT1;   // red LED on, green LED off
        P1->OUT |= BIT0;

        // add in closing the door function !!!!!!!!!

        state = 0;
    }

    else if (state == 4) {
        motorMenu();
        flag = 1;

        while (flag == 1) {
            push = Read_Keypad();

            if (push) {
                DC *= num;
                push = 0;
            }
        }
    }

    else if (state == 5) {
        lightsMenu();
    }
}

/*--------------------------------------------------------------
 * Function:        LED_init
 *
 * Description:     This function initializes the red and green
 *                  LEDs for the door.
 *
 * Inputs:          none
 *
 * Outputs:         none
 *-------------------------------------------------------------*/
void LED_init(void) {
    // red LED = P1.0
    P1->SEL0 &= ~BIT0;
    P1->SEL1 &= ~BIT0;
    P1->DIR |= BIT0;
    P1->OUT |= BIT0;

    // green LED = P2.1
    P2->SEL0 &= ~BIT1;
    P2->SEL1 &= ~BIT1;
    P2->DIR |= BIT1;
    P2->OUT &= ~BIT1;
}

/*--------------------------------------------------------------
 * Function:        DC_init
 *
 * Description:     This function initializes the DC motor.
 *
 * Inputs:          none
 *
 * Outputs:         none
 *-------------------------------------------------------------*/
void DC_init(void) {
    P2->SEL0 |= BIT7;   // configure P2.7 for PWM
    P2->SEL1 &= ~BIT7;
    P2->DIR |= BIT7;

    // TimerA 0.4 for P2.7
    TIMER_A0->CCR[0] |= period;                     // set period amount
    TIMER_A0->CCTL[4] |= TIMER_A_CCTLN_OUTMOD_7;    // set to outmode 7
    TIMER_A0->CCR[4] = DC;                          // set duty cycle
    TIMER_A0->CTL |= 0x0214;                        // set to SMCLK, up mode, clear TAR to start

    P4->SEL0 &= ~0x7F;      // enable simple I/O
    P4->SEL1 &= ~0x7F;
    P4->DIR &= ~0x7F;       // set as input
    P4->REN |= 0x0F;        // enable resistor
    P4->OUT |= 0x0F;        // enable pull up resistor
}
